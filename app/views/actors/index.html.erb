<h1>List of actors</h1>

<a href="http://localhost:3000/actors/new_form">Add a New actor</a>

<table>
  <tr>
    <th>Name</th>
      <th colspan="3">Actions</th>
  </tr>
  <% @list_of_actors.each do |actors| %>
  <tr>
      <td>
      <%= actors.name %>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actors.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actors.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_actor/<%= actors.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>

