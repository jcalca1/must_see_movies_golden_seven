<h1>Edit actor #<%=@actor.id %></h1>

<form action="http://localhost:3000/actors/update_row/<%=@actor.id %>">
  <div>
    <label for="actor_name">Name:</label>
    <input type="string" name="the_name" value="<%= @actor.name %>">
  </div>
   <div>
    <label for="actor_dob">Date of Birth:</label>
    <input type="string" name="the_dob" value="<%= @actor.dob %>">
  </div>
   <div>
    <label for="actor_bio">Bio:</label>
    <input type="text" name="the_bio" value="<%= @actor.bio %>">
  </div>
  <div>
    <label for="actor_image_url">Image URL:</label>
    <input type="string" name="the_image_url" value="<%= @actor.image_url %>">
  </div>
  <div>
    <button>Edit actor</button>
  </div>
</form>
