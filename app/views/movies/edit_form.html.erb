<h1>Edit movie #<%=@movie.id %></h1>

<form action="http://localhost:3000/movies/update_row/<%=@movie.id %>">
  <div>
    <label for="movie_title">Title:</label>
    <input type="string" name="the_title" value="<%= @movie.title %>">
  </div>
   <div>
    <label for="movie_year">Year:</label>
    <input type="integer" name="the_year" value="<%= @movie.year %>">
  </div>
   <div>
    <label for="movie_duration">Duration:</label>
    <input type="integer" name="the_duration" value="<%= @movie.duration %>">
  </div>
  <div>
    <label for="movie_description">Description:</label>
    <input type="text" name="the_description" value="<%= @movie.description %>">
  </div>
  <div>
    <label for="movie_image_url">Image URL:</label>
    <input type="string" name="the_image_url" value="<%= @movie.image_url %>">
  </div>
  <div>
    <button>Edit movie</button>
  </div>
</form>
