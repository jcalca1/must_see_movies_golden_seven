<h1>List of Movies</h1>

<a href="http://localhost:3000/movies/new_form">Add a New movie</a>

<table>
  <tr>
    <th>Name</th>
      <th colspan="3">Actions</th>
  </tr>
  <% @list_of_movies.each do |movies| %>
  <tr>
      <td>
      <%= movies.title %>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= movies.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= movies.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_movie/<%= movies.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>

