<h1>Edit Director #<%=@director.id %></h1>

<form action="http://localhost:3000/directors/update_row/<%=@director.id %>">
  <div>
    <label for="director_name">Name:</label>
    <input type="string" name="the_name" value="<%= @director.name %>">
  </div>
   <div>
    <label for="director_dob">Date of Birth:</label>
    <input type="string" name="the_dob" value="<%= @director.dob %>">
  </div>
   <div>
    <label for="director_bio">Bio:</label>
    <input type="text" name="the_bio" value="<%= @director.bio %>">
  </div>
  <div>
    <label for="director_image_url">Image URL:</label>
    <input type="string" name="the_image_url" value="<%= @director.image_url %>">
  </div>
  <div>
    <button>Edit Director</button>
  </div>
</form>
