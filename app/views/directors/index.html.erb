<h1>List of Directors</h1>

<a href="http://localhost:3000/directors/new_form">Add a New Director</a>

<table>
  <tr>
    <th>Name</th>
      <th colspan="3">Actions</th>
  </tr>
  <% @list_of_directors.each do |directors| %>
  <tr>
      <td>
      <%= directors.name %>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= directors.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= directors.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_director/<%= directors.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>

